<%= f.fields_for :node do |f| %>

    <div class="form-group">
      <%= f.label :header, 'Name', :class => 'control-label col-lg-3' %>
      <div class="col-lg-9">
        <%= f.text_field :header, :class => 'form-control', placeholder: 'Name' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Slug', for: :name, :class => 'control-label col-lg-3' %>
      <div class="col-lg-9">
        <%= f.text_field :name, :class => 'form-control', placeholder: 'Name' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :title, :class => 'control-label col-lg-3' %>
      <div class="col-lg-9">
        <%= f.text_field :title, :class => 'form-control', placeholder: 'Title' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :content, :class => 'control-label col-lg-3' %>
      <div class="col-lg-9">
        <%= f.text_area :content, :class => 'form-control', placeholder: 'Content', rows: 8 %>
      </div>
    </div>
<% end %>