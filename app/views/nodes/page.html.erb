<%- model_class = Node -%>
<div class="page-header">
  <h1><%= @node.header %></h1>
</div>

<div class="content">
  <%= markdown @node.content %>
</div>

<% if can? :manage, :node %>
  <div class="form-actions">
    <%= link_to t("update", obj: t('pages.crud')),
                edit_node_path(@node), :class => 'btn' %>
    <%= link_to t("delete", obj: t('pages.crud')),
                node_path(@node),
                :method => 'delete',
                :data => { :confirm => t('confirm', obj: t('pages.crud') ) },
                :class => 'btn btn-danger' %>
  </div>
<% end %>
