<%= form_for @source_instance, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.hidden_field :parent_instance_id %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :source_class_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :source_class_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                source_instances_path, :class => 'btn' %>
  </div>
<% end %>
