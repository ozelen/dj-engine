<%- model_class = SourceInstance -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:source_class_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @source_instances.each do |source_instance| %>
      <tr>
        <td><%= link_to source_instance.id, source_instance_path(source_instance) %></td>
        <td><%= source_instance.name %></td>
        <td><%= source_instance.description %></td>
        <td><%= source_instance.source_class_id %></td>
        <td><%= source_instance.parent.name if source_instance.parent %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_source_instance_path(source_instance), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      source_instance_path(source_instance),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_source_instance_path,
            :class => 'btn btn-primary' %>
