<% method ||= :post %>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { method: method, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :username, class: 'col-lg-3 control-label' %>
    <div class="col-lg-9">
      <%= f.text_field :username, class: 'form-control', autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: 'col-lg-3 control-label' %>
    <div class="col-lg-9">
      <%= f.text_field :email, class: 'form-control' %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

    </div>
  </div>

  <% if f.object.new_record? %>

    <div class="form-group">
      <%= f.label :password, class: 'col-lg-3 control-label' %>
      <div class="col-lg-9">
        <%= f.password_field :password, autocomplete: :off, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'col-lg-3 control-label' %>
      <div class="col-lg-9">
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
    </div>

  <% else %>
    <div class="form-group">
      <%= f.label :current_password, class: 'col-lg-3 control-label' %>
      <div class="col-lg-9">
        <%= f.password_field :current_password, class: 'form-control' %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, class: 'col-lg-3 control-label' %>
    <div class="col-lg-9">
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: 'col-lg-3 control-label' %>
    <div class="col-lg-9">
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  </div>

  <% f.object.address ||= Address.new %>

  <%= f.fields_for :address do |builder| %>
    <%= render 'addresses/form', f: builder %>
  <% end %>

  <% if current_user and current_user.admin? %>
    <%= f.label :roles, class: 'form-label col-lg-3' %>
    <div class="form-group col-lg-9">
      <% for role in User::ROLES %>
        <div class="checkbox">
          <label><%=h role.humanize %>
            <%= check_box_tag "user[roles][]", role, @user.roles.include?(role) %>
          </label>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= hidden_field_tag "user[roles][]", "" %>

  <div class="form-group">
    <div class="col-lg-offset-3 col-lg-9">
      <%= f.submit 'Register', class: ' btn btn-default' %>
    </div>
  </div>

<% end %>