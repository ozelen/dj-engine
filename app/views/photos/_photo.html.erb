<div id="file_<%= photo.id %>" class="well">
  <%= image_tag photo.image_url(:thumb).to_s %>
  <br>
  <%= photo.description %>

  <br>

  <div class="btn-group">
    <%= link_to 'Show', photo, class: 'btn btn-small btn-default' %>
      <%= link_to 'Edit', edit_photo_path(photo), class: 'btn btn-small btn-default' %>
    <%= link_to 'Destroy', photo, class: 'btn btn-small btn-default', method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>