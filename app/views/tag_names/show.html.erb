<%- model_class = TagName -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:tag_category_id) %>:</strong></dt>
  <dd><%= @tag_name.tag_category_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ident) %>:</strong></dt>
  <dd><%= @tag_name.ident %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @tag_name.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:measure_category_id) %>:</strong></dt>
  <dd><%= @tag_name.measure_category_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tag_names_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tag_name_path(@tag_name), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tag_name_path(@tag_name),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
