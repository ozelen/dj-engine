<%- model_class = TagName -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:tag_category_id) %></th>
      <th><%= model_class.human_attribute_name(:ident) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:measure_category_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tag_names.each do |tag_name| %>
      <tr>
        <td><%= link_to tag_name.id, tag_name_path(tag_name) %></td>
        <td><%= tag_name.tag_category_id %></td>
        <td><%= tag_name.ident %></td>
        <td><%= tag_name.name %></td>
        <td><%= tag_name.measure_category_id %></td>
        <td><%=l tag_name.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_tag_name_path(tag_name), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tag_name_path(tag_name),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tag_name_path,
            :class => 'btn btn-primary' %>
