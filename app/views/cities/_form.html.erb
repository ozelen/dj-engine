<%= form_for @city, :html => { :class => 'form-horizontal' } do |f| %>

  <%= render 'nodes/fields_for_accessible', node:@city.node, f: f %>

  <!-- Location -->
  <%= render 'locations/form', f: f %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), cities_path, :class => 'btn' %>
  </div>
<% end %>
