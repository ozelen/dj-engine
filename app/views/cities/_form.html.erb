<%= form_for @city, :html => { :class => 'form-horizontal' } do |f| %>

  <%= render 'nodes/fields_for_accessible', node:@city.node, f: f %>

  <!-- Location -->
  <%= render 'locations/form', f: f %>

    <div class="form-group">
      <%= f.label :type, :class => 'col-lg-3 control-label' %>
      <div class="col-lg-9">
        <%= f.select(:type_id, @hotel.type.collection_for_parent_select('hotels'), {}, {class: 'form-control'}) %>
      </div>
    </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.new")), cities_path, :class => 'btn' %>
  </div>
<% end %>
