
<% content_for :hotel_manage_menu do %>
  <li><%= link_to t('.edit', :default => t("helpers.links.edit")), edit_hotel_room_path(@hotel, @room) %></li>
  <li><%= link_to t('.destroy', :default => t("helpers.links.destroy")), hotel_room_path(@hotel, @room), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %></li>
