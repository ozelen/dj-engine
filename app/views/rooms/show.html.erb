<%- model_class = Room -%>
<% title @room.name + ', ' + @hotel.node.header %>
<%= render partial: 'hotels/hotel_header', locals: {active_item: 'Rooms'} %>

<div class="page-header">
  <h1><%= @room.name %></h1>
</div>

<%= render 'photos/dynamic_form', gallery: @room.gallery %>

<div class="row">
  <div class="col-lg-9">

    <h3>Description</h3>
    <div>
      <%= @room.description %>
    </div>

    <% if can? :manage, @hotel %>
    <div class="form-actions pull-right clearfix btn-group">
      <%= link_to t('.back', :default => t("helpers.links.back")), hotel_rooms_path, class: 'btn btn-default btn-small'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_hotel_room_path(@hotel, @room), class: 'btn btn-default btn-small' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")), hotel_room_path(@hotel, @room), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, class: 'btn btn-default btn-small btn-danger dropdown-toggle' %>
    </div>
    <% end %>

    <h3>Comments</h3>

    <%= render 'comments/comments_block', commentable: @room %>


  </div>

  <h3>All rooms:</h3>
  <div class="col-lg-3">
    <ul class="nav nav-pills nav-stacked">
    <% @hotel.rooms.each do |room| %>
      <li class="<%= @room == room ? "active" : "" %>"><%= link_to room.name, hotel_room_path(@hotel, room) %></li>
    <% end %>
    </ul>
  </div>

</div>
