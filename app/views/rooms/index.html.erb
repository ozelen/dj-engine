<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Hotel</th>
    <th>Service type</th>
    <th>Name</th>
    <th>Descripion</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.hotel_id %></td>
    <td><%= room.service_type_id %></td>
    <td><%= room.name %></td>
    <td><%= room.descripion %></td>
    <td><%= room.price %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

