<%- model_class = Room -%>
<% title 'Rooms, ' + @hotel.node.header %>

<% if can? :manage, @hotel %>
  <% if @rooms.blank? %><h3>No rooms in your hotel</h3><% end %>
  <div class="panel clearfix">
    <%= link_to 'Create new  Room', new_hotel_room_path(@hotel), :class => 'btn btn-primary btn-large btn-block pull-right' %>
  </div>
<% end %>

<%= render @rooms %>






