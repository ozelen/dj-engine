<%- model_class = MeasureCategory -%>


<h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>


<table class="table">
  <tr>
    <th>Name</th>
    <th>Measures</th>
    <th>Actions</th>
  </tr>

  <% @measure_categories.each do |measure_category| %>
      <tr>
        <td><%= measure_category.name %> </td>
        <td><%= measure_category.measures.count %></td>
        <td class="btn-group">
          <%= link_to 'Show', measure_category_path(measure_category), class: 'btn btn-mini btn-default' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_measure_category_path(measure_category), :class => 'btn btn-mini btn-default' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")), measure_category_path(measure_category), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
  <% end %>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")), new_measure_category_path, :class => 'btn btn-primary' %>



