<%= form_for @period, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :since, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :since, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :till, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :till, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :order_position, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :order_position, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                periods_path, :class => 'btn' %>
  </div>
<% end %>
