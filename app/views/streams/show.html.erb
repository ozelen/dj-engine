<% title @stream.node.title %>
<div class="row">
  <div class="col-lg-6">
    <h2><%= t 'resorts.h' %></h2>
    <%= render Resort.tagged_with(@stream.node.name) %>
  </div>

  <div class="col-lg-6">
    <h2><%= t 'hotels.h' %></h2>
    <%= render Hotel.tagged_with(@stream.node.name).limit(10) %>
  </div>
</div>

<hr>

<div id="posts" class="checktags">
  <h2><%= t 'news' %></h2>
  <%= render Post.tagged_with(@stream.node.name).limit(10) %>
</div>

<%= content_for(:sidebar) do %>
  <h2><%= t 'tours.h' %></h2>
  <%= render Tour.tagged_with(@stream.node.name).limit(5) %>
<% end %>
