<h1>Listing streams</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Slug</th>
    <th>Actions</th>
  </tr>

<% @streams.each do |stream| %>
  <tr>
    <td><%= stream.node.header %></td>
    <td><%= stream.node.name %></td>
    <td class="btn-group">
      <%= link_to 'Show', stream, class: 'btn btn-default btn-small' %>
      <%= link_to 'Edit', edit_stream_path(stream), class: 'btn btn-default btn-small' %>
      <%= link_to 'Destroy', stream, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-small' %>
    </td>
  </tr>
<% end %>
</table>

<br />

