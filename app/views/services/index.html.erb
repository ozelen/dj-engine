<%- model_class = Service -%>

<%= render partial: 'hotels/hotel_header', locals: {active_item: 'Services'} %>


    <% @services.each do |service| %>

    <%= render( partial: 'hotels/item_thumbnail', locals: {
            header:     link_to(service.name, hotel_service_path(@hotel, service)),
            teaser:     service.description,
            price:      service.price,
            edit:       edit_hotel_service_path(service.hotel, service),
            destroy:    hotel_service_path(service.hotel, service)
    }) %>


    <% end %>
