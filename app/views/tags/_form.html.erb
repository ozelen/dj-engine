<%= form_for @tag, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :tag_name_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :tag_name_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :value_int, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :value_int, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :value_flt, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :value_flt, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :value_str, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :value_str, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :measure_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :measure_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tags_path, :class => 'btn' %>
  </div>
<% end %>
