<h1>Listing posts</h1>

<table>
  <tr>
    <th>Slug</th>
    <th>Title</th>
    <th>Teaser</th>
    <th>Content</th>
    <th>Channel type</th>
    <th>Channel</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.slug %></td>
    <td><%= post.title %></td>
    <td><%= post.teaser %></td>
    <td><%= post.content %></td>
    <td><%= post.channel_type %></td>
    <td><%= post.channel_id %></td>
    <td><%= post.user %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
