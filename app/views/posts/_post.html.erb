<% unless post.new_record? && post.id.blank? %>
  <%= content_tag_for :div, post do %>
    <% path =
       if params[:stream] then post_path(@stream, post)
       elsif post.channel_type == 'Resort' then post_path(@resort, post)
       else [post.channel, post] end
    %>
    <%# path = params[:resort] ? post_path(@resort, post) : [post.channel, post] %>
    <h3><%= link_to post.title, path %></h3>
    <p><%= post.teaser %></p>

    <% unless post.comment_threads.blank? %>
      <%= post.comment_threads.count %> comments
    <% end %>

    <p>
      Tags: <%= raw post.tag_list.map { |t| link_to t, tag_path(post.channel, t) }.join(', ') %>
    </p>

    <br>

      <%= link_to 'Edit post', edit_post_path(post), remote: true, class: 'btn btn-default' %>
      <%= link_to 'Delete', post, method: :delete, remote: true, class: 'btn btn-danger', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>


    <hr>
  <% end %>
<% end %>
