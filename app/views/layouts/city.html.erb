<% menu = [
    [@city.name,    slug_city_path(@city),        -1 ],
    ['Description', city_description_path(@city), -1 ],
    ['Resorts',     city_resorts_path(@city),     -1 ],
    ['Hotels',      city_hotels_path(@city),      -1 ],
    ['Location',    city_location_path(@city),    -1 ],
    ['Photos',      city_album_path(@city),       -1 ]
    #['Comments',    city_comments_path,    @city.comment_threads.count ]
]
section = 'section'
cover_photo = @hotel.gallery.rand(:cover).image_url(:content) rescue nil
%>

<% content_for :head do %>
  <%= render 'layouts/visual_header', menu: menu, header: @city.node.header, section: section, title: @city.node.title, gallery: @city.gallery %>
<% end %>

<% content_for :content do %>
  <%= yield %>
<% end %>

<%= render template: "layouts/application" %>