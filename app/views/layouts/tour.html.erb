<% menu = [
    ['Description', tour_path(@tour),                 -1 ],
    ['Hotels',      tour_hotels_path(@tour),          -1 ],
    ['Resorts',     tour_resorts_path(@tour),         -1 ],
    ['Photos',      tour_album_path(@tour),                -1 ],
    ['Comments',    tour_comments_path(@tour),        -1 ],
    ['Contacts',    tour_contacts_path(@tour),        -1 ],
]
   section = 'section'
   cover_photo = @tour.gallery.rand(:cover).image_url(:content) rescue nil

%>

<% content_for :head do %>
  <%= render 'layouts/visual_header', poi: @tour, menu: menu, header: @tour.name, section: section, title: '', cover: cover_photo%>
<% end %>

<% content_for :content do %>
  <%= yield %>
<% end %>




<%= render template: "layouts/application" %>