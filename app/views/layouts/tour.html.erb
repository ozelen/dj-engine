<% menu = [
    ['Description', tour_path(@tour),                 -1 ],
    ['Hotels',      tour_hotels_path(@tour),          -1 ],
    ['Resorts',     tour_resorts_path(@tour),         -1 ],
    ['Photos',      tour_album_path(@tour),                -1 ],
    ['Comments',    tour_comments_path(@tour),        -1 ],
    ['Contacts',    tour_contacts_path(@tour),        -1 ],
]
   section = 'section'
   cover_photo = @tour.gallery.rand(:cover).image_url(:content) rescue nil

%>

<% content_for :manage_menu do %>
    <% if can? :manage, @tour %>
        <li><%= link_to t('.edit',    :default => t("helpers.links.edit")),     edit_tour_path(@tour) %></li>
        <li><%= link_to t('.destroy', :default => t("helpers.links.destroy")),  tour_path(@tour), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %></li>
    <% end %>
<% end %>

<% content_for :head do %>
    <%= render 'layouts/visual_header', poi: @tour, menu: menu, header: 'Tour', title: '',
               gallery: @tour.gallery %>
<% end %>

<% content_for :content do %>
  <%= yield %>
<% end %>




<%= render template: "layouts/application" %>