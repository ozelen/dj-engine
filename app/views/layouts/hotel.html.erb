<% menu = [
    ['Hotel summary',   slug_hotel_path(@hotel),                -1 ],
    ['Description', slug_hotel_description_path(@hotel),        @hotel.description.present? ],
    ['Rooms',       slug_hotel_rooms_path(@hotel),              @hotel.rooms.count     ],
    ['Services',    slug_hotel_services_path(@hotel),           @hotel.services.count  ],
    ['Blog',        slug_hotel_blog_path(@hotel),               @hotel.posts.count     ],
    ['Photos',      hotel_album_path(@hotel),                   @hotel.photos.count ],
    ['Prices',      slug_hotel_pricelist_path(@hotel),          @hotel.periods.count ],
    ['Comments',    slug_hotel_comments_path(@hotel),           @hotel.comment_threads.count ],
    ['Book',        slug_hotel_book_path(@hotel),               -1 ],
    ['Contacts',    slug_hotel_contacts_path(@hotel),           -1 ]
]

   cover_photo = @hotel.gallery.rand(:cover).image_url(:content) rescue nil
   title_photo = @hotel.gallery.rand(:title).image_url(:mini)    rescue nil

%>
<% content_for :manage_menu do %>
  <% if can? :manage, @hotel %>
    <%= yield(:hotel_manage_menu) %>
    <li><%= link_to t('.edit',    :default => t("helpers.links.edit")),     edit_hotel_path(@hotel) %></li>
    <li><%= link_to t('.destroy', :default => t("helpers.links.destroy")),  hotel_path(@hotel), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %></li>
    <li><%= link_to 'Create new  Room', new_hotel_room_path(@hotel) %></li>
    <li><%= link_to 'Edit room prices', pricelist_edit_path(@hotel) %></li>
    <li><%= link_to "Deals (#{@hotel.deals.count})", hotel_deals_path(@hotel) %></li>
    <li><%= link_to "Leads (#{@hotel.leads.count})", hotel_leads_path(@hotel) %></li>
  <% end %>
<% end %>

<% content_for :offer do %>
  <%= raw '<h3>Address</h3>' if @hotel.leads.blank? %>
  <%= render @hotel.leads.present? ? 'hotels/booking_form_offer' : 'address' %>
<% end %>

<% content_for :head do %>
  <%= render 'layouts/visual_header', poi: @hotel, menu: menu, header: @hotel.node.header, title: @hotel.node.title, gallery: @hotel.gallery %>
<% end %>

<% content_for :content do %>
  <%= yield %>
<% end %>

<%= render template: "layouts/application" %>