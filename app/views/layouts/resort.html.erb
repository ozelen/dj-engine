<% menu = [
    ['Info',        resort_path,             -1 ],
    ['Hotels',      resort_hotels_path,      -1 ],
    ['Blog',        resort_blog_path,        -1 ],
    ['Photos',      resort_album_path,       -1 ],
    ['Comments',    resort_comments_path,     @resort.comment_threads.count ],
]
section = 'section'
%>

<% content_for :content do %>
  <%= render 'layouts/visual_header', menu: menu, header: @resort.node.header, section: section, title: @resort.node.title %>

  <%= yield %>

<% end %>

<%= render template: "layouts/application" %>