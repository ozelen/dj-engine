<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="">

  <title><%= content_for?(:title) ? yield(:title) : @page_title %></title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "application", :media => "all" %>


  <!-- Google maps -->
  <link href="/maps/documentation/javascript/examples/default.css" rel="stylesheet">
  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
  <!-- / Google maps -->

</head>

<body>
<header id="page-header" class="navbar navbar-inverse navbar-default bs-docs-nav <%= params[:stream_slug] %>" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'BestHotels.in.ua', root_path, class: 'navbar-brand' %>
    </div>
    <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= @stream.present? ? @stream.node.header : t('streams.h') %>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <% Stream.all.each do |stream| %>
              <li><%= link_to stream.node.header, stream_slug_path(stream) %></li>
            <% end %>
          </ul>
        </li>
        <li><%= link_to t('hotels.h'), hotels_path  %></li>
        <li><%= link_to t('tours.h'), tours_path  %></li>
        <li><%= link_to t('resorts.h'), resorts_path  %></li>
        <li><%= link_to t('about'), '/about'  %></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t :lang %> <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to t(:lang, locale: :uk), locale: :uk %></li>
            <li><%= link_to t(:lang, locale: :ru), locale: :ru %></li>
            <li><%= link_to t(:lang, locale: :en), locale: :en %></li>
          </ul>
        </li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to t('users.sign_out'), destroy_user_session_path, :method => :delete %></li>
              <li><%= link_to t('users.edit_profile'), edit_user_registration_path %></li>
            </ul>
          </li>
        <% else %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Log In <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to t('users.sign_in'), new_user_session_path %></li>
              <li><%= link_to t('users.register'), new_user_registration_path %></li>
            </ul>
          </li>
        <% end %>
      </ul>

      <% if current_user && current_user.role?(:admin) %>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= t('users.admin') %> <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to t('hotels.create'), new_hotel_path %></li>
            <li class="divider"></li>
            <li><%= link_to t('resorts.h'),       resorts_path %></li>
            <li><%= link_to t('cities.h'),        cities_path %></li>
            <li><%= link_to t('hotels.h'),        hotels_path %></li>
            <li><%= link_to t('streams.h'),       streams_path %></li>
            <li class="divider"></li>
            <li><%= link_to t('users.h'),         users_path %></li>
            <li><%= link_to t('deals.h'),         deals_path %></li>
            <li class="divider"></li>
            <li><%= link_to t('comments.h'),      comments_path %></li>
            <li class="divider"></li>
            <li><%= link_to t('types'),           types_path %></li>
            <li><%= link_to t('measures'),        measure_categories_path %></li>
          </ul>
        </li>
      </ul>
      <% end %>

    </nav>
  </div>
</header>

<% if request.fullpath==root_path || params[:stream_slug] || !content_for?(:head) %>
  <div class="strean-title <%= params[:stream_slug] %>">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <h1><%= params[:stream_slug] ? @stream.node.header : t('homepage.name') %></h1>
          <p><%= params[:stream_slug] ? @stream.node.title : t('homepage.title') %></p>
          <%= yield(:stream_title) if content_for?(:stream_title) %>
        </div>
      </div>
    </div>
  </div>
<% end %>


<div class="bs-header">
  <div class="container">
    <div class="row visual-title">
      <div class="col-lg-8">
        <%= yield(:page_title) if content_for?(:page_title) %>
      </div>
    </div>

    <%= yield(:head)  if content_for?(:head)  %>
  </div>
</div>


<div class="container">

  <%# bootstrap_flash %>


  <div class="row">
    <div class="col-lg-8">
      <%= content_for?(:content) ? yield(:content) : yield %>
    </div>
    <div class="col-lg-4">

      <%= yield(:sidebar) if content_for?(:sidebar) %>

      <%# link_to "Sign in with Facebook",  user_omniauth_authorize_path(:facebook) %> <br>
      <%# link_to "Sign in with Vkontakte", user_omniauth_authorize_path(:vkontakte) %> <br>
      <%# link_to "Sign in with Twitter",   user_omniauth_authorize_path(:twitter) %>

    </div>
  </div>

  <hr>

  <footer>
    <p>&copy; Zelenyuk</p>
  </footer>

</div> <!-- /container -->

<%= javascript_include_tag "application" %>

<%= render 'layouts/3p/ga' %>

</body>
</html>