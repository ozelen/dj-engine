
<h1>Edit room prices</h1>
<hr>

<%= form_for @hotel, :html => { :class => 'form-horizontal' } do |f| %>

    <%= f.fields_for :periods do |builder| %>
        <%= render 'period_fields', f: builder %>
    <% end %>

    <div class="row">
      <%= link_to_add_fields "Add new period", f, :periods %>
    </div>

    <%= f.submit nil, :class => 'btn btn-primary' %>

<% end %>