<%- model_class = Hotel -%>
<% title (@hotel.node.header + (@hotel.node.title ? ' &mdash; ' + @hotel.node.title : '')).html_safe + ' | Djerelo.Info' %>

  <%= render partial: 'hotels/hotel_header', locals: {active_item: 'Info'} %>

<div class="page-header">
  <h1>Info</h1>
</div>

  <%= @hotel.node.content.html_safe if @hotel.node.content %>

<% if can? :manage, @hotel %>
<div class="form-actions pull-right clearfix btn-group">
  <%= link_to t('.back', :default => t("helpers.links.back")), hotels_path, class: 'btn btn-default btn-small'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_hotel_path(@hotel), class: 'btn btn-default btn-small' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")), hotel_path(@hotel), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, class: 'btn btn-default btn-small btn-danger dropdown-toggle' %>
</div>
<% end %>

<% content_for :sidebar do %>
    <%= render 'hotels/sidebar_rooms' %>
<% end %>