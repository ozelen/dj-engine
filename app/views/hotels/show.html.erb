<%- model_class = Hotel -%>


  <%= @hotel['active_item'] %>
  <%= render partial: 'hotels/hotel_header', locals: {active_item: 'Info'} %>

  <div id="node_content" data-mercury="full">
    <%= @hotel.node.content.html_safe if @hotel.node.content %>
  </div>

<div data-mercury="markdown">
  <%= @hotel.description %>
</div>

<div style="clear: both"></div>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              hotels_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_hotel_path(@hotel), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              hotel_path(@hotel),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<% content_for :sidebar do %>
    <%= render 'hotels/sidebar_rooms' %>
<% end %>