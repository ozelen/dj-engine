<%
   adr = @hotel.address
   phone_list = [adr.phone1, adr.phone2, adr.phone3].select{|x| x if x.present? }.join(', ')
%>

<h1>Contacts</h1>

<address>
  <strong><%= @hotel.name %></strong> <br>
  <%= adr.address %> <br>
  <% if phone_list.present? %>  Phones: <%= phone_list %> <br> <% end %>
  <% if adr.fax.present?     %> FAX: <%= adr.fax %> <br> <% end %>
  <% if adr.skype.present?   %> Skype: <%= adr.skype %> <br> <% end %>
  <% if adr.website.present? %> <%= link_to 'Website', adr.website, target: :_blank %> <br> <% end %>
  <% if adr.email.present? %> <%= mail_to adr.email %> <br> <% end %>
</address>
<% if @hotel.location %>
  <%= @hotel.location.address %> <br>
  <div id="map-canvas" style="height: 300px" lat="<%= @hotel.location.latitude %>" lng="<%= @hotel.location.longitude %>" mode="display" ></div>
<% end %>