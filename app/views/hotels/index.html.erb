<%- model_class = Hotel -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<div class="row">
    <% @hotels.each do |hotel| %>


            <div class="thumbnail">
              <img data-src="holder.js/300x200" alt="">
              <div class="caption">
                <h3><%= link_to hotel.node.header, node_path(hotel.node.name) %></h3>
                <div>
                  <%= hotel.node.content %>
                </div>



              </div>
            </div>

    <% end %>
</div>