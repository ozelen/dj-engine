<%= form_for @hotel, :html => { :class => 'form-horizontal' } do |f| %>

    <%= render partial: 'nodes/fields_for_accessible', locals: {node:@hotel.node} %>

  <div class="control-group">
    <%= f.label :location, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :location, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :city_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :user_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                hotels_path, :class => 'btn' %>
  </div>
<% end %>
