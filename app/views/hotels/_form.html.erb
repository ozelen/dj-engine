<%= form_for @hotel, :html => { :class => 'form-horizontal' } do |f| %>

    <div class="form-group">
      <%= f.label :type, :class => 'col-lg-3 control-label' %>
      <div class="col-lg-9">
        <%= f.select(:type_id, @hotel.type.collection_for_parent_select, {}, {class: 'form-control'}) %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :city_id, :class => 'control-label col-lg-3' %>
      <div class="col-lg-9">
        <%= f.select :city_id, options_from_collection_for_select(City.all, :id, :name), {}, {class: 'form-control'} %>
      </div>
    </div>

    <%= render partial: 'nodes/fields_for_accessible', locals: {node:@hotel.node} %>

    <%= render 'types/properties', evaluated: @hotel, f: f %>

  <div class="form-group">
    <%= f.label :location, :class => 'control-label col-lg-3' %>
    <div class="col-lg-9">
      <%= f.text_field :location, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-3' %>
    <div class="col-lg-9">
      <%= f.select :user_id, options_from_collection_for_select(current_user.users_available, :id, :name), {}, {class: 'form-control'} %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-3"></div>
    <div class="col-lg-9">
      <div class="form-actions">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    hotels_path, :class => 'btn btn-default' %>
      </div>
    </div>

  </div>
<% end %>
