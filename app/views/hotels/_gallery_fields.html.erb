<fieldset class="panel">
  <div class="form-group">
    <div class="col-lg-9">
      <%= f.text_field :name, placeholder: "Album Name", class: 'form-control' %>
    </div>
    <div class="col-lg-1">
      <%= f.hidden_field :_destroy %>
      <%= link_to "Delete album", '#', class: "remove_fields btn btn-danger" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12">
      <%= f.text_area :description, placeholder: "Album Description", class: 'form-control', rows: 2 %>
    </div>
  </div>
</fieldset>