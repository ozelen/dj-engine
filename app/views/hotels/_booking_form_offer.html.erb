<h1>Booking</h1>
<h3>Choose reservation dates</h3>

<form class="form-horizontal" role="form">
  <div class="form-group">
    <div class="col-lg-12">
      <input type="text" class="form-control" id="inputFrom" placeholder="Arrival date">
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12">
      <input type="text" class="form-control" id="inputTo" placeholder="Departure date">
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-4">
      <div class="checkbox">
        <label>
          <input type="checkbox"> Free only
        </label>
      </div>
    </div>
    <div class="col-lg-8">
      <button type="submit" class="btn btn-success pull-right">Check out</button>
    </div>
  </div>
</form>