<h1><%= t('booking.now') %></h1>
<h4><%= t 'booking.choose_dates' %></h4>

<% lead_params = ActiveSupport::JSON.decode(@hotel.leads[0].params) %>


<%= form_tag 'http://bookit.djerelo.info/search', method: :get, role: :form, class: 'form-horizontal', target: :_blank do %>
  <%= hidden_field_tag 'p[target]', "o-#{lead_params['id']}" %>
  <%# hidden_field_tag 'p[name]', ActiveSupport::JSON.decode(@hotel.leads[0].params)['name'] %>
  <div class="form-group">
    <div class="col-lg-12">
      <%= text_field_tag 'p[start]', l(Date.today), placeholder: 'Arrival date', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-12">
      <%= text_field_tag 'p[end]', l(Date.tomorrow), placeholder: 'Departure date', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-8">
      <div class="checkbox">
        <label>
          <%= check_box_tag 'p[free]', 1, true %>
          <%= t 'booking.check_free' %>
        </label>
      </div>
    </div>
    <div class="col-lg-4">
      <%= submit_tag t('booking.find'), class: 'btn btn-success pull-right' %>
    </div>
  </div>

<% end %>