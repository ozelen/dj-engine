<h1>Listing room_prices</h1>

<table>
  <tr>
    <th>Room</th>
    <th>Period</th>
    <th>Value</th>
    <th>Measure</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @room_prices.each do |room_price| %>
  <tr>
    <td><%= room_price.room_id %></td>
    <td><%= room_price.period_id %></td>
    <td><%= room_price.value %></td>
    <td><%= room_price.measure_id %></td>
    <td><%= room_price.description %></td>
    <td><%= link_to 'Show', room_price %></td>
    <td><%= link_to 'Edit', edit_room_price_path(room_price) %></td>
    <td><%= link_to 'Destroy', room_price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

