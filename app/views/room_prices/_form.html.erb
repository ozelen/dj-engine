<%= form_for @room_price, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :room_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :room_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :period_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :period_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :value, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :value, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :measure_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :measure_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                room_prices_path, :class => 'btn' %>
  </div>
<% end %>
